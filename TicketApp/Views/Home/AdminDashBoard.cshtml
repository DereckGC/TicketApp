@{
    Layout = "~/Views/Shared/_LayoutAdminDash.cshtml";
}
<div class="container-fluid px-0">
    <!--  Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="#">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item me-4">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-fill"></i> Main Dashboard
                    </a>
                </li>
                <li class="nav-item me-4">
                    <a class="nav-link text-white" href="#" onclick="loadPartialView('PartialManageTasks')">
                        <i class="bi bi-gear-wide-connected"></i> Manage Tasks
                    </a>
                </li>
                <li class="nav-item me-4">
                    <a class="nav-link text-white" href="#" onclick="loadPartialView('GetUsers')">
                        <i class="bi bi-person-lines-fill"></i> Users Table
                    </a>
                </li>
                <li class="nav-item me-4">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Register">
                        <i class="bi bi-people-fill"></i> Add a new User
                    </a>
                </li>
                <li class="nav-item me-4">
                    <a class="nav-link text-white" asp-controller="User" asp-action="InviteUser">
                        <i class="bi bi-envelope-at-fill"></i> Invite by email
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Logout">
                        <i class="bi bi-file-lock-fill"></i> Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid">
        <main class="p-4" id="contentArea">
            <!-- Dinamicamente las vistas -->
        </main>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function loadPartialView(viewName) {
        let controller;

        if(viewName === "GetUsers") {
            controller = "User";
        } else if(viewName === "PartialManageTasks") {
            controller = "Task";

        }
        //dependiendo del boton, se llama a cierto metodo en el controlador

        console.log("Loading partial view: " + viewName);
        $.get(`/${controller}/` + viewName, function (data) {
            $("#contentArea").html(data);
        }).fail(function () {
            alert("Error loading " + viewName);
        });
    }
</script>